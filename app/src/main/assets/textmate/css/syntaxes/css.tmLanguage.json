{
  "name": "CSS",
  "scopeName": "source.css",
  "patterns": [
    { "include": "#comments" },
    { "include": "#rules" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        { "name": "comment.block.css", "begin": "/\\*", "end": "\\*/" }
      ]
    },
    "rules": {
      "patterns": [
        {
          "name": "meta.selector.css",
          "match": "[.#]?[A-Za-z_][A-Za-z0-9_-]*"
        },
        {
          "name": "punctuation.section.block.begin.css",
          "match": "\\{"
        },
        {
          "name": "punctuation.section.block.end.css",
          "match": "\\}"
        },
        {
          "name": "support.type.property-name.css",
          "match": "[A-Za-z-]+(?=\\s*:)"
        },
        {
          "name": "keyword.operator.css",
          "match": ":"
        },
        {
          "name": "constant.numeric.css",
          "match": "[-+]?(?:[0-9]*\\.)?[0-9]+(?:px|em|rem|%|vh|vw|s|ms)?"
        },
        {
          "name": "string.quoted.double.css",
          "begin": "\"",
          "end": "\""
        },
        {
          "name": "string.quoted.single.css",
          "begin": "'",
          "end": "'"
        }
      ]
    }
  }
}