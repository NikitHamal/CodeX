<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".AboutActivity">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/surface"
            app:titleTextColor="@color/on_surface"
            app:title="About"
            app:titleTextAppearance="@style/TextAppearance.Material3.TitleLarge"
            app:navigationIcon="@drawable/icon_arrow_back_round"
            app:navigationIconTint="@color/on_surface" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/developer_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="32dp"
            app:srcCompat="@drawable/ic_person"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full" />

    <TextView
        android:id="@+id/developer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nikit Hamal"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="32dp">

        <ImageButton
            android:id="@+id/github_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_github"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="GitHub"
            android:layout_marginEnd="16dp"/>

        <ImageButton
            android:id="@+id/linkedin_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_linkedin"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="LinkedIn"
            android:layout_marginEnd="16dp"/>

        <ImageButton
            android:id="@+id/facebook_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_facebook"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Facebook"
            android:layout_marginEnd="16dp"/>

        <ImageButton
            android:id="@+id/instagram_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_instagram"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Instagram"/>
    </LinearLayout>

</LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
