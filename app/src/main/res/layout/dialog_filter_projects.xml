<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort by"
        android:textAppearance="?attr/textAppearanceTitleLarge"
        android:layout_marginBottom="16dp"/>

    <RadioGroup
        android:id="@+id/radiogroup_sort_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radio_name_asc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name (A-Z)" />

        <RadioButton
            android:id="@+id/radio_name_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name (Z-A)" />

        <RadioButton
            android:id="@+id/radio_date_newest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date (Newest)"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/radio_date_oldest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date (Oldest)" />

    </RadioGroup>

</LinearLayout>
