<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/surface_container">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Project Name"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxStrokeColor="@color/primary"
        app:hintTextColor="@color/on_surface_variant">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edittext_project_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/on_surface"
            android:textColorHint="@color/on_surface_variant" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Project Type"
        android:textSize="16sp"
        android:textColor="@color/on_surface"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_project_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:selectionRequired="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Empty"
                android:checked="true"
                style="@style/Widget.App.Chip.Choice" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_html_css_js"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HTML/CSS/JS"
                style="@style/Widget.App.Chip.Choice" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_tailwind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tailwind CSS"
                style="@style/Widget.App.Chip.Choice" />

        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/text_template_style_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Template Style"
        android:textSize="16sp"
        android:textColor="@color/on_surface"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp"
        android:visibility="gone" />

    <HorizontalScrollView
        android:id="@+id/scroll_template_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:visibility="gone">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_template_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:selectionRequired="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_basic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basic"
                android:checked="true"
                style="@style/Widget.App.Chip.Choice" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_responsive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Responsive"
                style="@style/Widget.App.Chip.Choice" />

        </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>

</LinearLayout>
