<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="start"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Model Name with Background -->
        <TextView
            android:id="@+id/text_ai_model_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gemini 2.0 Flash"
            android:textColor="@color/on_primary_container"
            android:textSize="12sp"
            android:background="@drawable/rounded_model_name_background"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:layout_marginBottom="8dp" />

        <!-- Thinking Section (Collapsible) -->
        <LinearLayout
            android:id="@+id/layout_thinking_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp"
            android:visibility="gone">

            <!-- Thinking Header -->
            <LinearLayout
                android:id="@+id/layout_thinking_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Thoughts"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/on_surface"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/icon_thinking_expand"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/icon_expand_more_round"
                    app:tint="@color/on_surface_variant" />

            </LinearLayout>

            <!-- Thinking Content -->
            <TextView
                android:id="@+id/text_thinking_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/on_surface_variant"
                android:textSize="12sp"
                android:lineSpacingExtra="2dp"
                android:visibility="gone"
                android:text="AI thinking process will appear here..."
                android:textIsSelectable="true" />

        </LinearLayout>

        <!-- Main AI Message Content -->

        <TextView
            android:id="@+id/text_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/on_surface"
            android:textSize="14sp"
            android:textStyle="normal"
            android:layout_marginBottom="8dp"
            android:text="AI Explanation will go here."
            android:textIsSelectable="true" />

        <!-- Web Sources Section -->
        <LinearLayout
            android:id="@+id/layout_web_sources"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/button_web_sources"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Web sources"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="@color/primary"
                android:background="@drawable/rounded_web_sources_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground" />

        </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_proposed_file_changes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proposed File Changes:"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:layout_marginBottom="4dp"/>

                <LinearLayout
                    android:id="@+id/file_changes_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_action_summaries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Actions Performed:"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:layout_marginBottom="4dp"/>

                </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_suggestions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Suggestions:"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:layout_marginBottom="4dp"/>

                </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_action_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="end"
                android:visibility="gone">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_discard"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discard"
                    android:textColor="@color/error"
                    app:strokeColor="@color/error"
                    app:strokeWidth="1dp"
                    app:cornerRadius="8dp"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_accept"
                    style="@style/Widget.Material3.Button.UnelevatedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accept"
                    android:textColor="@color/on_primary"
                    android:backgroundTint="@color/primary"
                    app:cornerRadius="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_reapply"
                    style="@style/Widget.Material3.Button.UnelevatedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reapply"
                    android:textColor="@color/on_primary"
                    android:backgroundTint="@color/primary"
                    app:cornerRadius="8dp"
                    android:visibility="gone" />

            </LinearLayout>

    </LinearLayout>
</LinearLayout>
