<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="start"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="0dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.ChatBubble.AI"
        app:cardBackgroundColor="@color/surface_container_high">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/text_ai_model_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="10sp"
                android:layout_marginBottom="4dp"
                android:text="AI Model: Gemini 2.0 Flash" />

            <LinearLayout
                android:id="@+id/layout_indexing_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:visibility="gone">
                <ProgressBar
                    android:id="@+id/progress_bar_indexing"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="0"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/text_indexing_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Indexing project (0/100)"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="12sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/text_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnSurface"
                android:textSize="14sp"
                android:textStyle="normal"
                android:layout_marginBottom="8dp"
                android:text="AI Explanation will go here." />

            <LinearLayout
                android:id="@+id/layout_proposed_file_changes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proposed File Changes:"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:layout_marginBottom="4dp"/>

                <LinearLayout
                    android:id="@+id/file_changes_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_action_summaries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Actions Performed:"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:layout_marginBottom="4dp"/>

                </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_suggestions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Suggestions:"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:layout_marginBottom="4dp"/>

                </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_action_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="end"
                android:visibility="gone">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_discard"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discard"
                    android:textColor="@color/error"
                    app:strokeColor="@color/error"
                    app:strokeWidth="1dp"
                    app:cornerRadius="8dp"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_accept"
                    style="@style/Widget.Material3.Button.UnelevatedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accept"
                    android:textColor="@color/on_primary"
                    android:backgroundTint="@color/primary"
                    app:cornerRadius="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_reapply"
                    style="@style/Widget.Material3.Button.UnelevatedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reapply"
                    android:textColor="@color/on_primary"
                    android:backgroundTint="@color/primary"
                    app:cornerRadius="8dp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
