<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Diff toolbar (only visible for DIFF_ tabs, controlled in code) -->
    <include
        android:id="@+id/diff_toolbar"
        layout="@layout/view_diff_toolbar"
        android:visibility="gone" />

    <io.github.rosemoe.sora.widget.CodeEditor
        android:id="@+id/code_editor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="14sp"
        android:background="@color/surface_container_low"
        android:overScrollMode="never"
        android:elevation="2dp" />

    <!-- Inline Diff RecyclerView (hidden by default) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/diff_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:overScrollMode="never"
        android:background="@color/surface_container_low"/>

</LinearLayout>
