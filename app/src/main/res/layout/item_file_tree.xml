<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="2dp"
    app:cardCornerRadius="30dp"
    app:cardElevation="1dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="@color/surface"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:minHeight="40dp">

        <LinearLayout
            android:id="@+id/icon_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/image_file_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_file"
                android:contentDescription="File icon"
                app:tint="@color/on_surface_variant" />

            <ImageView
                android:id="@+id/image_expand_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_expand_more"
                android:contentDescription="Expand icon"
                android:layout_marginStart="4dp"
                android:visibility="gone"
                app:tint="@color/on_surface_variant" />

        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_file_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="File name"
            android:textSize="12sp"
            android:textColor="@color/on_surface"
            android:layout_marginStart="12dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_med"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall" />

        <ImageView
            android:id="@+id/image_more_vert"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_more_vert_round"
            android:contentDescription="More options"
            android:layout_marginStart="8dp"
            android:visibility="visible"
            android:focusable="true"
            android:clickable="true"
            app:tint="@color/on_surface_variant" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
