<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="12dp"
    android:paddingVertical="8dp"
    android:gravity="center_vertical"
    android:minHeight="40dp"
    android:background="@color/surface"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <!-- Thin indentation guide. We will position it from code by updating marginStart. -->
    <View
        android:id="@+id/indent_guide"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/outline"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/image_file_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/icon_file_round"
        android:contentDescription="File or folder icon"
        app:tint="@color/on_surface_variant" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_file_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:text="File name"
        android:textColor="@color/on_surface"
        android:maxLines="1"
        android:ellipsize="end"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

    <!-- Expand/collapse chevron (visible for folders) -->
    <ImageView
        android:id="@+id/image_expand_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/icon_expand_more_round"
        android:contentDescription="Expand icon"
        android:visibility="gone"
        app:tint="@color/on_surface_variant" />

    <!-- Context menu -->
    <ImageView
        android:id="@+id/image_more_vert"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/icon_more_vert_round"
        android:contentDescription="More options"
        android:visibility="visible"
        android:focusable="true"
        android:clickable="true"
        app:tint="@color/on_surface_variant" />

</LinearLayout>