<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="16dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- Radio Button -->
    <RadioButton
        android:id="@+id/radio_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:clickable="false"
        android:focusable="false" />

    <!-- Model Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_model_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gemini 2.5 Flash"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:textColor="@color/on_surface" />

        <TextView
            android:id="@+id/text_model_capabilities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thinking • Web Search • Vision • Documents"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="@color/on_surface_variant"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- Capability Icons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="8dp">

        <ImageView
            android:id="@+id/icon_thinking"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/icon_psychology_round"
            android:layout_marginEnd="4dp"
            android:visibility="gone"
            app:tint="@color/primary" />

        <ImageView
            android:id="@+id/icon_web_search"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/icon_search_round"
            android:layout_marginEnd="4dp"
            android:visibility="gone"
            app:tint="@color/primary" />

        <ImageView
            android:id="@+id/icon_vision"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/icon_visibility_round"
            android:layout_marginEnd="4dp"
            android:visibility="gone"
            app:tint="@color/primary" />

    </LinearLayout>

</LinearLayout>