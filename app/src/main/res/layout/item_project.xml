<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_project"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="@color/surface_container">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/image_project_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_folder_code"
            android:contentDescription="Project folder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/primary" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@id/image_project_icon"
            app:layout_constraintEnd_toStartOf="@id/image_more"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/text_project_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Project Name"
                android:textSize="14sp"
                android:textColor="@color/on_surface"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/text_project_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last modified: May 19, 2025"
                android:textSize="12sp"
                android:textColor="@color/on_surface_variant"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <ImageView
            android:id="@+id/image_more"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_more_vert"
            android:contentDescription="More options"
            android:background="@android:color/transparent" android:padding="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/on_surface_variant" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
