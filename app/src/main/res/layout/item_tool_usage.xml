<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="8dp"
    android:paddingVertical="6dp"
    android:layout_marginEnd="6dp"
    android:background="@drawable/rounded_label_background"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/icon_tool_status"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginEnd="6dp"
        android:tint="@color/on_secondary_container"
        android:src="@drawable/icon_functions_round"/>

    <TextView
        android:id="@+id/text_tool_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="searchInProject"
        android:textColor="@color/on_secondary_container"
        android:textSize="11sp"
        android:textStyle="bold"/>

</LinearLayout>
