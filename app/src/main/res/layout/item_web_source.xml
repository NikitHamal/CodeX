<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="16dp"
    android:paddingHorizontal="24dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- Favicon -->
    <ImageView
        android:id="@+id/image_favicon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/icon_public_round"
        android:scaleType="centerCrop"
        app:tint="@color/on_surface_variant" />

    <!-- Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Website Title"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:textColor="@color/on_surface"
            android:maxLines="2"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/text_snippet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Website description or snippet"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="@color/on_surface_variant"
            android:layout_marginTop="4dp"
            android:maxLines="3"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/text_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="https://example.com"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="@color/primary"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- External Link Icon -->
    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/icon_open_in_new_round"
        android:layout_marginStart="12dp"
        app:tint="@color/on_surface_variant" />

</LinearLayout>