<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:fitsSystemWindows="true">

    <!-- Main Message Area -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Chat Messages RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_chat_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"
            android:paddingHorizontal="12dp"
            android:scrollbars="none"
            android:overScrollMode="ifContentScrolls" />

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/layout_empty_state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone">

            <!-- AI Assistant Icon -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="40dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/primary_container">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_smart_toy_round"
                    app:tint="@color/on_primary_container" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Greeting Text -->
            <TextView
                android:id="@+id/text_greeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi! I'm your AI coding assistant"
                android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                android:textColor="@color/on_surface"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:gravity="center" />

            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I can help you write, debug, and improve your code. Ask me anything!"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="@color/secondary_text"
                android:gravity="center" />

        </LinearLayout>

    </FrameLayout>

    <!-- Bottom Input Area -->
    <LinearLayout
        android:id="@+id/layout_input_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/surface"
        android:elevation="8dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingHorizontal="16dp"
        android:minHeight="0dp"
        android:visibility="visible"
        android:layout_gravity="bottom">

        <!-- Model Selector and Settings -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Model Selector -->
            <LinearLayout
                android:id="@+id/layout_model_selector_custom"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:background="@drawable/rounded_edittext_background"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/text_selected_model"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gemini 2.5 Flash"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/on_surface"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/icon_arrow_drop_down_round"
                    app:tint="@color/secondary_text" />

            </LinearLayout>

            <!-- Settings/Tune Button -->
            <ImageView
                android:id="@+id/button_ai_settings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_tune_round"
                android:background="@drawable/rounded_edittext_background"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:padding="8dp"
                android:layout_marginStart="12dp"
                app:tint="@color/on_surface_variant" />

        </LinearLayout>

        <!-- Prompt Input Area -->
        <LinearLayout
            android:id="@+id/linear_prompt_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/rounded_edittext_background_with_border"
            android:padding="8dp"
            android:minHeight="56dp">

            <!-- Input Field -->
            <EditText
                android:id="@+id/edit_text_ai_prompt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:hint="Ask me anything about your code..."
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="@color/on_surface"
                android:textColorHint="@color/secondary_text"
                android:background="@android:color/transparent"
                android:inputType="textMultiLine|textCapSentences"
                android:maxLines="4"
                android:scrollbars="vertical"
                android:paddingHorizontal="12dp"
                android:paddingVertical="12dp"
                android:imeOptions="actionSend"
                android:minHeight="40dp" />

            <!-- Send Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_ai_send"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:minWidth="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/icon_send_round"
                app:iconSize="18dp"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:cornerRadius="20dp"
                android:contentDescription="Send message"
                style="@style/Widget.Material3.Button" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
